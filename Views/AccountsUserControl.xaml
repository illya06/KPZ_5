<UserControl x:Class="KPZ_5.Views.AccountsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KPZ_5.Views" xmlns:viewmodels="clr-namespace:KPZ_5.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:DataViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" Height="220" HorizontalAlignment="Center" VerticalAlignment="Top"
                  ItemsSource="{Binding Path=DataAccountsList}" Width="500">
        </DataGrid>
    </Grid>
</UserControl>
